---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const totalPosts = posts.length;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-atkinson">
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="relative bg-cover bg-center h-[60vh] sm:h-[70vh] md:h-[80vh] min-h-[400px] md:min-h-[500px] flex items-center justify-center before:absolute before:inset-0 before:bg-black/40 before:z-[1]" style="background-image: url('/hero-image.jpg');">
				<div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
					<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 leading-tight">Mike Collier</h1>
					<p class="text-lg sm:text-xl md:text-2xl mb-8 opacity-90">Enterprise AI Strategist & Product Leader</p>
				</div>
			</section>

			<!-- Main Content -->
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<!-- Introduction -->
				<section class="text-center mb-16">
					<h2 class="text-3xl font-bold text-gray-900 mb-6">Building the Future of AI</h2>
					<p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
						I'm an Enterprise AI Strategist with over 12 years of experience in government contracting, 
						specializing in AI product development, strategic planning, and cross-functional team leadership. 
						I help organizations navigate the complex landscape of AI implementation and drive innovation 
						that delivers real business value.
					</p>
				</section>

				<!-- Stats Section -->
				<section class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto mb-16">
					<div class="text-center p-6 bg-gray-50 rounded-lg border border-gray-200">
						<span class="block text-3xl font-bold text-blue-600 mb-2">12+</span>
						<span class="text-gray-600 text-sm uppercase tracking-wide">Years Gov Contracting</span>
					</div>
					<div class="text-center p-6 bg-gray-50 rounded-lg border border-gray-200">
						<span class="block text-3xl font-bold text-blue-600 mb-2">{totalPosts}</span>
						<span class="text-gray-600 text-sm uppercase tracking-wide">Blog Articles</span>
					</div>
					<div class="text-center p-6 bg-gray-50 rounded-lg border border-gray-200">
						<span class="block text-3xl font-bold text-blue-600 mb-2">Enterprise</span>
						<span class="text-gray-600 text-sm uppercase tracking-wide">AI Strategist</span>
					</div>
				</section>

				<!-- Blog Posts Section -->
				<section>
					<div class="flex items-center justify-between mb-8">
						<h2 class="text-2xl font-bold text-gray-900">Latest Articles</h2>
						<a href="/blog" class="text-blue-600 hover:text-blue-800 font-medium">View all â†’</a>
					</div>
					
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
						{posts.map((post) => (
							<article class="p-6 border border-gray-200 rounded-lg bg-white transition-all duration-200 hover:border-blue-600 hover:shadow-md">
								<a href={`/blog/${post.id}/`} class="block">
									<h3 class="text-xl font-semibold text-gray-900 mb-3 hover:text-blue-600 transition-colors">{post.data.title}</h3>
									<div class="text-gray-500 text-sm mb-4">
										<FormattedDate date={post.data.pubDate} />
									</div>
									{post.data.description && (
										<p class="text-gray-600 leading-relaxed">{post.data.description}</p>
									)}
								</a>
							</article>
						))}
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>


