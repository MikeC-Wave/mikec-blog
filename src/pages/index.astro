---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const totalPosts = posts.length;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-atkinson">
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero-section">
				<div class="hero-content">
					<h1 class="hero-title">Mike Collier</h1>
					<p class="hero-subtitle">Enterprise AI Strategist & Product Leader</p>
				</div>
			</section>

			<!-- Main Content -->
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<!-- Introduction -->
				<section class="text-center mb-16">
					<h2 class="text-3xl font-bold text-gray-900 mb-6">Building the Future of AI</h2>
					<p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
						I'm an Enterprise AI Strategist with over 12 years of experience in government contracting, 
						specializing in AI product development, strategic planning, and cross-functional team leadership. 
						I help organizations navigate the complex landscape of AI implementation and drive innovation 
						that delivers real business value.
					</p>
				</section>

				<!-- Stats Section -->
				<section class="stats-grid mb-16">
					<div class="stat-item">
						<span class="stat-number">12+</span>
						<span class="stat-label">Years Gov Contracting</span>
					</div>
					<div class="stat-item">
						<span class="stat-number">{totalPosts}</span>
						<span class="stat-label">Blog Articles</span>
					</div>
					<div class="stat-item">
						<span class="stat-number">Enterprise</span>
						<span class="stat-label">AI Strategist</span>
					</div>
				</section>

				<!-- Blog Posts Section -->
				<section>
					<div class="flex items-center justify-between mb-8">
						<h2 class="text-2xl font-bold text-gray-900">Latest Articles</h2>
						<a href="/blog" class="text-blue-600 hover:text-blue-800 font-medium">View all â†’</a>
					</div>
					
					<div class="blog-grid">
						{posts.map((post) => (
							<article class="blog-post-card">
								<a href={`/blog/${post.id}/`} class="block">
									<h3 class="blog-post-title">{post.data.title}</h3>
									<div class="blog-post-date">
										<FormattedDate date={post.data.pubDate} />
									</div>
									{post.data.description && (
										<p class="blog-post-description">{post.data.description}</p>
									)}
								</a>
							</article>
						))}
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>


