---
export interface Props {
	href: string;
}

const { href } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a 
	href={href} 
	class="text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200 text-sm tracking-wide"
>
	<slot />
</a>
