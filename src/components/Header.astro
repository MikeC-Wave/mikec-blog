---
import HeaderLink from './HeaderLink.astro';
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
	<nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center h-16">
			<!-- Logo/Brand -->
			<div class="flex-shrink-0">
				<a href="/" class="group flex items-center">
					<span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent hover:from-blue-700 hover:to-purple-700 transition-all duration-300">
						mikec<span class="text-gray-600 group-hover:text-gray-800 transition-colors duration-300">.ai</span>
					</span>
				</a>
			</div>
			
			<!-- Navigation Links -->
			<div class="hidden md:flex items-center space-x-8">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				
				<!-- Social Links -->
				<div class="flex items-center space-x-4 ml-6 pl-6 border-l border-gray-200">
					<a 
						href="https://www.linkedin.com/in/michael-collier-5565b919/" 
						target="_blank" 
						rel="noopener noreferrer"
						class="text-gray-500 hover:text-blue-600 transition-colors"
						aria-label="LinkedIn"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
						</svg>
					</a>
				</div>
			</div>
			
			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button 
					type="button" 
					id="mobile-menu-button"
					class="text-gray-500 hover:text-gray-900 focus:outline-none focus:text-gray-900"
					aria-label="Toggle mobile menu"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>
		
		<!-- Mobile Navigation Menu -->
		<div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 py-4">
			<div class="flex flex-col space-y-4">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				
				<!-- Mobile Social Links -->
				<div class="flex items-center space-x-4 pt-4 border-t border-gray-200">
					<a 
						href="https://www.linkedin.com/in/michael-collier-5565b919/" 
						target="_blank" 
						rel="noopener noreferrer"
						class="text-gray-500 hover:text-blue-600 transition-colors"
						aria-label="LinkedIn"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle functionality
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const mobileMenu = document.getElementById('mobile-menu');
		
		if (mobileMenuButton && mobileMenu) {
			mobileMenuButton.addEventListener('click', function() {
				mobileMenu.classList.toggle('hidden');
			});
		}
	});
</script>
