---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<p class="tagline">Enterprise AI Strategy • Product Leadership • Government Innovation</p>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/in/michael-collier-5565b919/" target="_blank">
				<span class="sr-only">Connect with Mike on LinkedIn</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
					/>
				</svg>
			</a>
			<a href="https://github.com/MikeC-A6" target="_blank">
				<span class="sr-only">View Mike's GitHub profile</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	.brand h2 {
		margin: 0;
		font-size: 1.1em;
		font-weight: 600;
	}
	.brand .tagline {
		margin: 0;
		font-size: 0.75em;
		color: var(--text-muted);
		font-style: italic;
		font-weight: 400;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-primary);
		transition: color 0.2s ease;
	}

	h2 a:hover {
		color: var(--primary);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
	}
	nav a {
		padding: 0.75em 1em;
		color: var(--text-secondary);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
		border-radius: 6px;
	}
	nav a.active {
		color: var(--primary);
		background: var(--gray-50);
	}
	nav a:hover {
		color: var(--primary);
		background: var(--gray-50);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links {
		gap: 0.75em;
	}
	.social-links a {
		padding: 0.5em;
		border-radius: 8px;
		color: var(--text-muted);
	}
	.social-links a:hover {
		color: var(--primary);
		background: var(--gray-50);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.brand .tagline {
			display: none;
		}
		nav {
			padding: 0.75rem 0;
		}
		.brand h2 {
			font-size: 1rem;
		}
	}
</style>
