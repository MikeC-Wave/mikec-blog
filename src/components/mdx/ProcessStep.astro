---
// ProcessStep component for numbered visual steps for workflows/processes
export interface Props {
  number: number | string;
  title: string;
  class?: string;
}

const { number, title, class: className = '' } = Astro.props;
---

<div class={`group relative my-6 ${className}`}>
  <!-- Clean, minimal step container -->
  <div class="flex items-start gap-6 p-6 bg-white rounded-xl border border-slate-200 hover:border-slate-300 hover:shadow-md transition-all duration-200">
    
    <!-- Step number circle -->
    <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-sm">
      <span class="text-white font-semibold text-lg">{number}</span>
    </div>
    
    <!-- Content area -->
    <div class="flex-1 min-w-0">
      <!-- Step title -->
      <h3 class="text-lg font-semibold text-slate-900 mb-3 leading-tight">
        {title}
      </h3>
      
      <!-- Step content -->
      <div class="prose prose-slate prose-sm max-w-none">
        <slot />
      </div>
    </div>
  </div>
  
  <!-- Connecting line to next step (hidden for last step) -->
  <div class="absolute left-12 top-20 w-0.5 h-6 bg-slate-200 transform -translate-x-1/2 group-last:hidden"></div>
</div>

<style>
  /* Ensure prose styles work well within the component */
  :global(.prose p:last-child) {
    margin-bottom: 0;
  }
  
  :global(.prose p) {
    color: #64748b;
    line-height: 1.6;
  }
  
  :global(.prose ul, .prose ol) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  
  :global(.prose li) {
    color: #64748b;
  }
</style> 