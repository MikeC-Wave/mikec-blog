---
// ProcessStep component for numbered visual steps for workflows/processes
export interface Props {
  number: number | string;
  title: string;
  class?: string;
}

const { number, title, class: className = '' } = Astro.props;
---

<div class={`flex items-start gap-4 my-6 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-200 ${className}`}>
  <!-- Step Number Badge -->
  <div class="flex-shrink-0">
    <div class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-lg shadow-lg">
      {number}
    </div>
  </div>
  
  <!-- Step Content -->
  <div class="flex-1 min-w-0">
    <h3 class="text-xl font-semibold text-gray-900 mb-3 leading-tight">
      {title}
    </h3>
    <div class="prose prose-gray max-w-none text-gray-700">
      <slot />
    </div>
  </div>
</div> 