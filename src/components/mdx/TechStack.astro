---
// TechStack component for displaying technology stacks and tools with visual badges
export interface Props {
  title?: string;
  class?: string;
}

const { title = 'Tech Stack', class: className = '' } = Astro.props;
---

<div class={`my-8 p-6 bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl border border-gray-200 ${className}`}>
  <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
    <span class="text-2xl">üõ†Ô∏è</span>
    {title}
  </h3>
  
  <div class="flex flex-wrap gap-3">
    <slot />
  </div>
</div>

<style>
  /* Global styles for tech badges within the stack */
  :global(.tech-badge) {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    transition: all 0.2s;
  }
  
  :global(.tech-badge:hover) {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: scale(1.05);
  }
  
  :global(.tech-badge-primary) {
    background: #2563eb;
    color: white;
    border-color: #2563eb;
  }
  
  :global(.tech-badge-secondary) {
    background: #4b5563;
    color: white;
    border-color: #4b5563;
  }
  
  :global(.tech-badge-success) {
    background: #059669;
    color: white;
    border-color: #059669;
  }
  
  :global(.tech-badge-warning) {
    background: #eab308;
    color: white;
    border-color: #eab308;
  }
  
  :global(.tech-badge-danger) {
    background: #dc2626;
    color: white;
    border-color: #dc2626;
  }
  
  /* Icon styling within badges */
  :global(.tech-badge .tech-icon) {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }
</style> 