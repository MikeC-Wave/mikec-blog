---
// TechStack component for displaying technology stacks and tools with visual badges
export interface Props {
  title?: string;
  class?: string;
}

const { title = 'Tech Stack', class: className = '' } = Astro.props;
---

<div class={`my-12 p-8 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 rounded-2xl border border-slate-200 shadow-lg hover:shadow-xl transition-all duration-300 ${className}`}>
  <!-- Header with enhanced styling -->
  <div class="mb-6">
    <h3 class="text-2xl font-bold text-slate-900 mb-2 flex items-center gap-3">
      <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
        <span class="text-xl">üõ†Ô∏è</span>
      </div>
      <span class="tracking-tight">{title}</span>
    </h3>
    <div class="h-1 w-20 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full"></div>
  </div>
  
  <!-- Tech badges container -->
  <div class="flex flex-wrap gap-4">
    <slot />
  </div>
</div>

<style>
  /* Global styles for tech badges within the stack */
  :global(.tech-badge) {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(148, 163, 184, 0.3);
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }
  
  /* Background shimmer effect */
  :global(.tech-badge::before) {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s ease;
  }
  
  :global(.tech-badge:hover::before) {
    left: 100%;
  }
  
  :global(.tech-badge:hover) {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: rgba(59, 130, 246, 0.3);
  }
  
  /* Colored badge variants */
  :global(.tech-badge-primary) {
    background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
    color: white;
    border-color: #2563eb;
    box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.3), 0 2px 4px -1px rgba(37, 99, 235, 0.2);
  }
  
  :global(.tech-badge-primary:hover) {
    box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.4), 0 4px 6px -2px rgba(37, 99, 235, 0.3);
  }
  
  :global(.tech-badge-secondary) {
    background: linear-gradient(135deg, #4b5563 0%, #374151 100%);
    color: white;
    border-color: #4b5563;
    box-shadow: 0 4px 6px -1px rgba(75, 85, 99, 0.3), 0 2px 4px -1px rgba(75, 85, 99, 0.2);
  }
  
  :global(.tech-badge-secondary:hover) {
    box-shadow: 0 10px 15px -3px rgba(75, 85, 99, 0.4), 0 4px 6px -2px rgba(75, 85, 99, 0.3);
  }
  
  :global(.tech-badge-success) {
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    color: white;
    border-color: #059669;
    box-shadow: 0 4px 6px -1px rgba(5, 150, 105, 0.3), 0 2px 4px -1px rgba(5, 150, 105, 0.2);
  }
  
  :global(.tech-badge-success:hover) {
    box-shadow: 0 10px 15px -3px rgba(5, 150, 105, 0.4), 0 4px 6px -2px rgba(5, 150, 105, 0.3);
  }
  
  :global(.tech-badge-warning) {
    background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
    color: white;
    border-color: #eab308;
    box-shadow: 0 4px 6px -1px rgba(234, 179, 8, 0.3), 0 2px 4px -1px rgba(234, 179, 8, 0.2);
  }
  
  :global(.tech-badge-warning:hover) {
    box-shadow: 0 10px 15px -3px rgba(234, 179, 8, 0.4), 0 4px 6px -2px rgba(234, 179, 8, 0.3);
  }
  
  :global(.tech-badge-danger) {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    color: white;
    border-color: #dc2626;
    box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.3), 0 2px 4px -1px rgba(220, 38, 38, 0.2);
  }
  
  :global(.tech-badge-danger:hover) {
    box-shadow: 0 10px 15px -3px rgba(220, 38, 38, 0.4), 0 4px 6px -2px rgba(220, 38, 38, 0.3);
  }
  
  /* Icon styling within badges */
  :global(.tech-badge .tech-icon) {
    width: 1.125rem;
    height: 1.125rem;
    flex-shrink: 0;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }
  
  /* Text content styling */
  :global(.tech-badge span) {
    position: relative;
    z-index: 10;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
</style> 