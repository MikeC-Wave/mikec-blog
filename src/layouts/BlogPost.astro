---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="font-atkinson">
		<Header />
		<main>
			<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 pt-8 md:pt-6">
				<div class="mb-8">
					{heroImage && (
						<img 
							class="w-full h-64 md:h-80 object-cover rounded-lg mb-8" 
							src={heroImage} 
							alt={title}
						/>
					)}
					<div class="text-center">
						<div class="text-sm text-gray-500 mb-4">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<div class="text-xs text-gray-400 mt-1">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)}
						</div>
						<h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">
							{title}
						</h1>
						{description && (
							<p class="text-xl text-gray-600 mt-4 leading-relaxed">
								{description}
							</p>
						)}
					</div>
				</div>
				<div class="prose prose-lg max-w-none">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Custom prose styling to override Tailwind Typography defaults */
	.prose-content {
		color: #4b5563;
		line-height: 1.625;
	}
	
	.prose-content h2 {
		color: #111827;
		font-size: 1.875rem;
		font-weight: 600;
		margin-top: 3rem;
		margin-bottom: 1rem;
		line-height: 1.25;
	}
	
	.prose-content h3 {
		color: #111827;
		font-size: 1.5rem;
		font-weight: 600;
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		line-height: 1.25;
	}
	
	.prose-content h4 {
		color: #111827;
		font-size: 1.25rem;
		font-weight: 600;
		margin-top: 1.5rem;
		margin-bottom: 0.5rem;
		line-height: 1.25;
	}
	
	.prose-content p {
		margin-bottom: 1.5rem;
		font-size: 1.125rem;
		line-height: 1.625;
	}
	
	.prose-content ul, .prose-content ol {
		margin-bottom: 1.5rem;
		padding-left: 1.5rem;
	}
	
	.prose-content li {
		margin-bottom: 0.5rem;
		font-size: 1.125rem;
		line-height: 1.625;
	}
	
	.prose-content blockquote {
		border-left: 4px solid #2563eb;
		padding-left: 1.5rem;
		padding-top: 1rem;
		padding-bottom: 1rem;
		margin: 2rem 0;
		background-color: #f9fafb;
		font-style: italic;
		color: #4b5563;
		border-radius: 0 0.5rem 0.5rem 0;
	}
	
	.prose-content code {
		background-color: #f3f4f6;
		color: #111827;
		padding: 0.375rem 0.375rem;
		border-radius: 0.25rem;
		font-size: 0.875rem;
		font-weight: 500;
	}
	
	.prose-content pre {
		background-color: #1f2937;
		color: #f3f4f6;
		padding: 1.5rem;
		border-radius: 0.5rem;
		overflow-x: auto;
		margin: 2rem 0;
	}
	
	.prose-content pre code {
		background: transparent;
		padding: 0;
		color: inherit;
	}
	
	.prose-content a {
		color: #2563eb;
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 2px;
		transition: color 0.2s ease;
	}
	
	.prose-content a:hover {
		color: #3b82f6;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.prose-content p,
		.prose-content li {
			font-size: 1rem;
		}
		
		.prose-content h2 {
			font-size: 1.5rem;
		}
		
		.prose-content h3 {
			font-size: 1.25rem;
		}
	}
</style>
